<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="10dp"
    app:cardPreventCornerOverlap="true"
    android:id="@+id/cardview">

    <RelativeLayout
        style="@style/GreyBlockStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView android:id="@+id/img_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:src="@drawable/ic_users_black_24dp" />

        <LinearLayout android:id="@+id/ll_doctor_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/img_icon"
            android:layout_toLeftOf="@+id/ll_appointment_details">

            <TextView
                android:id="@+id/txt_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor"
                android:textColor="@color/textColorPrimary"
                android:textSize="24sp"
                android:ellipsize="end"
                android:singleLine="true"/>

            <TextView
                android:id="@+id/txt_doctor_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialist"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:ellipsize="end"
                android:singleLine="true"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/ll_appointment_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/txt_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10-Aug-2019"
                android:textColor="@color/textColorPrimary"
                android:textSize="18sp"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.00 AM"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:ellipsize="end"
                android:layout_gravity="right"/>
        </LinearLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>