<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.pill.reminder.activity.SuggestIdeaActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        style="@style/GreyBlockStyle"
        android:padding="10dp">

        <TextView android:id="@+id/txt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please suggest any idea"
            style="@style/LableTextStyle"/>

        <EditText android:id="@+id/edt_suggestion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txt_label"
            android:layout_above="@+id/btn_save"
            android:layout_marginTop="10dp"
            android:inputType="textMultiLine|textCapSentences"
            android:gravity="left|top"
            android:background="@drawable/textbox_bg"
            android:padding="10dp"/>

        <Button android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/pink_button_style"
            android:text="Save"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
</LinearLayout>
