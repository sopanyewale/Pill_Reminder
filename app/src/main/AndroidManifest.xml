<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pill.reminder">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.ViewUsersActivity" />
        <activity android:name=".activity.ViewDoctorActivity" />
        <activity android:name=".activity.ViewAppointmentsActivity" />
        <activity android:name=".activity.ViewMedicinesActivity" />
        <activity android:name=".activity.ViewMeasurementActivity" />
        <activity android:name=".activity.AddMeasurementActivity" />
        <activity android:name=".activity.AddUserActivity" />
        <activity android:name=".activity.AddMedicineActivity" />
        <activity android:name=".activity.AddDoctorActivity" />
        <activity android:name=".activity.AboutUsActivity" />
        <activity android:name=".activity.PrivacyPolicyActivity" />
        <activity android:name=".activity.AccountSettingsActivity" />
        <activity
            android:name=".activity.SuggestIdeaActivity"
            android:windowSoftInputMode="stateVisible" />
        <activity android:name=".activity.FaqActivity" />
        <activity android:name=".activity.UserProfileActivity" />
        <activity android:name=".activity.AddAppointmentActivity"></activity>
    </application>

</manifest>